<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="1dp" android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp">
            <shape android:shape="oval">
                <solid android:color="@color/PRESSED_STATE_COLOR" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_horizontal_material" android:right="@dimen/button_padding_horizontal_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- focused state -->
    <item android:state_focused="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="1dp" android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp">
            <shape android:shape="oval">
                <solid android:color="@color/FOCUSED_STATE_COLOR" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_horizontal_material" android:right="@dimen/button_padding_horizontal_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- normal state -->
    <item android:state_enabled="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="1dp" android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp">
            <shape android:shape="oval">
                <solid android:color="@color/NORMAL_STATE_COLOR" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_horizontal_material" android:right="@dimen/button_padding_horizontal_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <item android:state_enabled="false">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="1dp" android:insetLeft="1dp" android:insetRight="1dp" android:insetTop="1dp">
            <shape android:shape="oval">
                <solid android:color="@color/colorGris2" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_horizontal_material" android:right="@dimen/button_padding_horizontal_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>
</selector>