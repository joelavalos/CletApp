<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="@dimen/button_padding_vertical_material" android:insetLeft="@dimen/button_padding_vertical_material" android:insetRight="@dimen/button_padding_vertical_material" android:insetTop="@dimen/button_padding_vertical_material">
            <shape android:shape="oval">
                <solid android:color="@color/colorVerdeOscuroPlay" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_vertical_material" android:right="@dimen/button_padding_vertical_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- focused state -->
    <item android:state_focused="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="@dimen/button_inset_vertical_material" android:insetLeft="@dimen/button_inset_horizontal_material" android:insetRight="@dimen/button_inset_horizontal_material" android:insetTop="@dimen/button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/control_corner_material" />
                <solid android:color="@color/FOCUSED_STATE_COLOR" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_horizontal_material" android:right="@dimen/button_padding_horizontal_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- normal state -->
    <item android:state_enabled="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="@dimen/button_padding_vertical_material" android:insetLeft="@dimen/button_padding_vertical_material" android:insetRight="@dimen/button_padding_vertical_material" android:insetTop="@dimen/button_padding_vertical_material">
            <shape android:shape="oval">
                <solid android:color="@color/colorVerde" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_vertical_material" android:right="@dimen/button_padding_vertical_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <item android:state_enabled="false">
        <inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetBottom="@dimen/button_padding_vertical_material" android:insetLeft="@dimen/button_padding_vertical_material" android:insetRight="@dimen/button_padding_vertical_material" android:insetTop="@dimen/button_padding_vertical_material">
            <shape android:shape="oval">
                <solid android:color="@color/colorGris2" />
                <padding android:bottom="@dimen/button_padding_vertical_material" android:left="@dimen/button_padding_vertical_material" android:right="@dimen/button_padding_vertical_material" android:top="@dimen/button_padding_vertical_material" />
            </shape>
        </inset>
    </item>
</selector>