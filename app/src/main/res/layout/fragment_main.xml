<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joel.cletapp.fragments.MainFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mi_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/ButtonIniciarDesafio"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/mi_mapa"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:background="@drawable/boton_play"
        android:elevation="8dp"
        android:src="@drawable/xhdpi_ic_play_arrow_white_24dp" />

    <ImageButton
        android:id="@+id/ButtonCrearRutinaFlash"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignBottom="@+id/mi_mapa"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/boton_add"
        android:elevation="8dp"
        android:src="@drawable/xhdpi_ic_add_white_24dp" />

    <ImageButton
        android:id="@+id/ButtonDetenerDesafio"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/ButtonIniciarDesafio"
        android:layout_alignLeft="@+id/ButtonIniciarDesafio"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_circular"
        android:elevation="8dp"
        android:src="@drawable/ic_stop_white_24dp" />

    <TextView
        android:id="@+id/cronometroContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/SpaceEspacio2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorBlanco"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/ImageViewCircularDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cronometroContainer"
        android:layout_alignLeft="@+id/cronometroContainer"
        android:layout_alignTop="@+id/cronometroContainer"
        android:layout_marginLeft="8dp"
        android:src="@drawable/mdpi_ic_timer_black_24dp" />

    <TextView
        android:id="@+id/cronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cronometroContainer"
        android:layout_alignRight="@+id/cronometroContainer"
        android:layout_alignTop="@+id/cronometroContainer"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/ImageViewCircularDuracion"
        android:gravity="center_vertical"
        android:text="00:00:00"
        android:textColor="#4169E1"
        android:textSize="24dp" />

    <android.widget.Space
        android:id="@+id/SpaceEspacio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/desafioContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cronometroContainer"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cronometroContainer"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/SpaceEspacio2"
        android:background="@color/colorBlanco"
        android:gravity="center_horizontal"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/TextViewElegirDesafioActual"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/desafioContainer"
        android:layout_alignLeft="@+id/desafioContainer"
        android:layout_alignRight="@+id/desafioContainer"
        android:layout_alignTop="@+id/desafioContainer"
        android:background="@drawable/selector_textview_lolipop"
        android:clickable="true"
        android:gravity="center"
        android:text="Sin desafio actual" />

    <ImageView
        android:id="@+id/ImageViewImagenDesafioActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/desafioContainer"
        android:layout_alignLeft="@+id/desafioContainer"
        android:layout_alignTop="@+id/desafioContainer"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/mdpi_ic_star_black_24dp" />

    <TextView
        android:id="@+id/TextViewNombreDesafioActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/desafioContainer"
        android:layout_alignTop="@+id/ImageViewImagenDesafioActual"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/ImageViewImagenDesafioActual"
        android:singleLine="true"
        android:text="Nombre desafio"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextViewValorDesafioActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewNombreDesafioActual"
        android:layout_alignRight="@+id/TextViewNombreDesafioActual"
        android:layout_below="@+id/TextViewNombreDesafioActual"
        android:gravity="right"
        android:text="25 m"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextViewEstadoActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/desafioContainer"
        android:layout_alignRight="@+id/desafioContainer"
        android:layout_below="@+id/desafioContainer"
        android:gravity="center_horizontal"
        android:text="Disponible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorMorado"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TextViewEstadoTerminado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/desafioContainer"
        android:layout_alignLeft="@+id/desafioContainer"
        android:layout_alignRight="@+id/desafioContainer"
        android:layout_alignTop="@+id/desafioContainer"
        android:gravity="center"
        android:text="Ver resultados"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorNegro" />

    <TextView
        android:id="@+id/rutinaContainer"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/SpaceEspacio2"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorBlanco"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/TextViewElegirRutina"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/TextViewFechaDesafio"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/SpaceEspacio2"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/selector_textview_lolipop"
        android:clickable="true"
        android:gravity="center"
        android:text="Seleccionar rutina" />

    <ImageView
        android:id="@+id/ImageViewImagenDesafio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rutinaContainer"
        android:layout_alignLeft="@+id/rutinaContainer"
        android:layout_alignTop="@+id/rutinaContainer"
        android:layout_marginLeft="8dp"
        android:src="@drawable/mdpi_ic_directions_bike_black_24dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TextViewNombreDesafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rutinaContainer"
        android:layout_alignTop="@+id/rutinaContainer"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ButtonIniciarRutina"
        android:layout_toRightOf="@+id/ImageViewImagenDesafio2"
        android:gravity="center"
        android:singleLine="true"
        android:text="Nombre desafio"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextViewCategoriaDesafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:text="Categoria"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TextViewValorDesafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="25 m"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TextViewNotaDesafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageViewImagenDesafio2"
        android:layout_alignRight="@+id/TextViewNombreDesafio"
        android:layout_below="@+id/TextViewNombreDesafio"
        android:layout_toRightOf="@+id/ImageViewImagenDesafio2"
        android:text="Este desafio fue creado para bajar de peso asdasdasdsad"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#9E9E9E"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TextViewFechaDesafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageViewImagenDesafio2"
        android:layout_alignRight="@+id/TextViewCategoriaDesafio"
        android:text="Desde: 11/11/2011 hasta: 12/11/2011"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#9E9E9E"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TextViewEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageViewImagenDesafio2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextViewFechaDesafio"
        android:text="Pendiente"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorMorado"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/ButtonIniciarRutina"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/TextViewElegirRutina"
        android:layout_alignRight="@+id/TextViewElegirRutina"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/boton_play"
        android:elevation="9dp"
        android:src="@drawable/hdpi_ic_check_white_24dp" />

    <ImageButton
        android:id="@+id/ButtonDetenerRutina"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/TextViewElegirRutina"
        android:layout_alignRight="@+id/TextViewElegirRutina"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/boton_circular"
        android:elevation="8dp"
        android:enabled="false"
        android:src="@drawable/hdpi_ic_clear_white_24dp"
        android:textColor="@color/colorBlanco" />

    <TextView
        android:id="@+id/datosRutinaContainer"
        android:layout_width="168dp"
        android:layout_height="53dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rutinaContainer"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/SpaceEspacio2"
        android:background="@color/colorBlanco"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/TextViewSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/datosRutinaContainer"
        android:layout_alignRight="@+id/datosRutinaContainer"
        android:layout_alignTop="@+id/datosRutinaContainer"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Series: 0/0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextViewRepeticiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/datosRutinaContainer"
        android:layout_alignLeft="@+id/datosRutinaContainer"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Repeticiones: 0/0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />

    <Button
        android:id="@+id/ButtonFrecuencioa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/boton"
        android:text="Frecuencia"
        android:textColor="@color/colorBlanco"
        android:visibility="gone" />

</RelativeLayout>


