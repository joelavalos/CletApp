<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextViewNombreRepeticion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeticion 1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorNegro" />

    <TextView
        android:id="@+id/TextViewCampoDistanciaRepeticion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNombreRepeticion"
        android:text="Recorrido: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorNegro" />

    <TextView
        android:id="@+id/TextViewCampoDistanciaRequerida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewCampoDistanciaRepeticion"
        android:text="Requerido: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorNegro"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/TextViewValorDistanciaRepeticion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNombreRepeticion"
        android:layout_toRightOf="@+id/TextViewCampoDistanciaRepeticion"
        android:text="150 m de "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorGris2" />

    <TextView
        android:id="@+id/TextViewValorRequeridoDistanciaRepeticion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextViewCampoDistanciaRequerida"
        android:layout_toRightOf="@+id/TextViewCampoDistanciaRequerida"
        android:text="1800 m"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorGris2" />

    <TextView
        android:id="@+id/TextViewValorEvaluacionDistanciaRepeticion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextViewNombreRepeticion"
        android:text="+36 m"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorNegro" />

</RelativeLayout>