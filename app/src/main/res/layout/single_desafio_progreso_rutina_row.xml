<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextViewNombreDesafioRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="8dp"
        android:text="Fecha y dia"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/accentColor" />

    <ImageView
        android:id="@+id/ImageViewImagenDesafioRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNombreDesafioRutina"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_star_black_24dp" />

    <TextView
        android:id="@+id/TextViewValorDesafioRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ImageViewImagenDesafioRutina"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ImageViewImagenDesafioRutina"
        android:text="Desafio"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorNegro" />

    <TextView
        android:id="@+id/TextViewNombreObjetivoDesafioRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewValorDesafioRutina"
        android:layout_below="@+id/TextViewValorDesafioRutina"
        android:text="100 Series"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorGris2" />

    <TextView
        android:id="@+id/TextViewRepeticionesDesafioRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewValorDesafioRutina"
        android:layout_below="@+id/TextViewNombreObjetivoDesafioRutina"
        android:text="3 repeticiones de: "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorGris2" />

    <TextView
        android:id="@+id/TextViewObjetivoDesafioRutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewNombreObjetivoDesafioRutina"
        android:layout_toRightOf="@+id/TextViewRepeticionesDesafioRutina"
        android:text="100 m"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorNegro" />

    <ImageView
        android:id="@+id/ImageViewImagenEstadoDesafio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/TextViewObjetivoDesafioRutina"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextViewValorDesafioRutina"
        android:layout_marginRight="16dp"
        android:src="@drawable/pending" />
</RelativeLayout>